let handler = async (m, { conn, command, text }) => {
  if (!text) throw `*Epale don tienes que poner el @ o el nombre del pibe o de la piba que quieras calcular su porcentaje de ${command.replace('how', '')}*`
  conn.reply(m.chat, `
_*${text}* *es ğŸ˜ˆ* *${Math.floor(Math.random() * 1039193829)}%* *${command.replace('how', '').toUpperCase()}*_
`.trim(), m, m.mentionedJid ? {
    contextInfo: {
      mentionedJid: m.mentionedJid
    }
  } : {})
}
handler.help = ['gay', 'lesbi'].map(v => 'how' + v + ' siapa?')
handler.tags = ['kerang']
handler.command = /^(pajero|pajera|puta|puto|pedofilo|pedofila|insano|insana|pobre|sucio|sucia|pendeja|pendejo|chupapija|gay|estupido|estupida|fandeositoperu|Peruano|peruana|)/i
handler.owner = false
handler.mods = false
handler.premium = false
handler.group = false
handler.private = false

handler.admin = false
handler.botAdmin = false

handler.fail = null

module.exports = handler
